<script>
  import gsap from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const delay = 0;
    gsap
      .timeline()
      .call(() => {
        document.querySelector("body").style.backgroundColor = "#f4f0e6";
      })
      .to(".preloader__item.one", {
        autoAlpha: 1,
        duration: 0,
        delay: delay,
      })
      .to(".preloader__item.one", {
        autoAlpha: 0,
        duration: 0,
        delay: 0.5,
      })
      .to(".preloader__item.two", {
        autoAlpha: 1,
        duration: 0,
        delay: 0,
      })
      .to(".preloader__item.two", {
        autoAlpha: 0,
        duration: 0,
        delay: 0.5,
      })
      .to(".preloader__item.three", {
        autoAlpha: 1,
        duration: 0,
        delay: 0,
      })
      .to(".preloader__item.three", {
        autoAlpha: 0,
        duration: 0,
        delay: 0.5,
      })
      .to("#preloader", {
        y: "100%", // Corrected property name to 'y' for translateY
        duration: 0.75,
        ease: "power2.inOut",
      })
      .from("main", {
        scale: 1.01,
        y: "-5%", // Corrected property name to 'y' for translateY
        duration: 0.5,
        delay: -0.4,
        ease: "power1.inOut",
      })
      .call(() => {
        document.querySelector("body").classList.remove("o-hidden");
      });
  });
</script>

