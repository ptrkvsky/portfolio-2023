---
import { Logo } from "@features/layout/header/components/Logo";
import { NavMain } from "@features/layout/header/components/NavMain";
import { Clock } from "@features/layout/header/components/Clock";
import { City } from "@features/layout/header/components/City";
import { ButtonMenu } from "@features/layout/header/components/ButtonMenu";
import { Blur } from "@features/layout/header/components/Blur";
---

<header data-testid="header" class="header max-container">
  <div class="foreground">
    <div class="wrapper-logo-nav">
      <Logo />
      <NavMain />
    </div>
    <div class="wrapper-city-clock">
      <City />
      <Clock />
    </div>
    <ButtonMenu />
  </div>
  <Blur />
</header>

<style>
  header {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 910;
  }

  .foreground {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: var(--spacing-3xl);
    width: 100%;
    z-index: 910;

    @media screen and (max-width: 766px) {
      height: var(--spacing-xl);
    }
  }

  .wrapper-logo-nav {
    display: flex;
    align-items: center;
    gap: var(--spacing-5xl);
  }

  .wrapper-city-clock {
    display: flex;
    align-items: center;
    gap: var(--spacing-3xl);

    @media screen and (max-width: 1024px) {
      display: none;
    }
  }
</style>
