<script>
  import gsap from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const menu = document.querySelector("#menu-mobile");
    if (!menu) return;

    gsap.set(menu, {
      translateY: "100%",
    });
  });
</script>

<div class="wrapper">
  <div
    aria-hidden="true"
    id="menu-mobile"
    class="menu-mobile"
    data-testid="menu-mobile"
  >
    Menu Mobile
  </div>
</div>

<style lang="scss">
  .wrapper {
    overflow: hidden;
  }
  .menu-mobile {
    opacity: 0;
    pointer-events: none;
    position: fixed;
    background-color: var(--color-absolute-zero);
    width: 100%;
    height: 100vh;
  }
</style>
